<Window x:Class="withoutMVVM.DeleteClientDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:withoutMVVM"
        mc:Ignorable="d"
        Title="DeleteClientDialog" Height="300" Width="300">
    <Grid>
        <Button Name="CancelDeletion"  Content="Cancel" HorizontalAlignment="Right" Margin="10,214,10,0" VerticalAlignment="Top" Width="100" Click="CancelDeletion_Click" />
        <Button Content="Confirm Deletion" HorizontalAlignment="Left" Margin="10,214,10,0" VerticalAlignment="Top" Width="100" Click="ConfirmCliDel_Click" />
        <TextBox Name="ClientDelConfirmation"  HorizontalAlignment="Left" Height="21" Margin="10,122,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="272"/>
        <Label Content="Введите имя клиента, которого хотите удалить" HorizontalAlignment="Left" Margin="10,91,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
