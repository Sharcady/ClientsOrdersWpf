<Window x:Class="withoutMVVM.AddOrderInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:withoutMVVM"
        mc:Ignorable="d"
        Title="Add Order Info" Height="400" Width="600">
    <Grid>
        <Button Name="SetNewOrderButton"  Content="Set new order" HorizontalAlignment="Left" Margin="150,326,0,0" VerticalAlignment="Top" Width="100" Click="SetNewOrderButton_Click"/>
        <Button Name="CancelNewOrder"  Content="Cancel" HorizontalAlignment="Right" Margin="0,326,150,0" VerticalAlignment="Top" Width="100" Click="CancelNewOrder_Click"/>
        <TextBox Name="OrderDescription" HorizontalAlignment="Center" Height="100" Margin="116,150,133,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="343"/>
        <TextBlock HorizontalAlignment="Left" Margin="116,115,0,0" TextWrapping="Wrap" Text="Insert order description" VerticalAlignment="Top"/>

    </Grid>
</Window>
